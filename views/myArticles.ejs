<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container">
        <div class="page-header">
            <h1 class="page-title"><%= title %></h1>
            <a href="/create" class="btn btn-primary">Write New Article</a>
        </div>

        <div class="articles-grid">
            <% if (articles && articles.length > 0) { %>
                <% articles.forEach(article => { %>
                    <div class="article-card my-article">
                        <% if (article.image) { %>
                            <div class="article-thumbnail">
                                <a href="/article/<%= article._id %>">
                                    <img src="<%= article.image %>" alt="<%= article.title %>" class="thumbnail-image">
                                </a>
                            </div>
                        <% } %>
                        
                        <div class="article-card-content">
                            <div class="article-header">
                                <h2 class="article-title">
                                    <a href="/article/<%= article._id %>"><%= article.title %></a>
                                </h2>
                                <div class="article-meta">
                                    <span class="date"><%= new Date(article.createdAt).toLocaleDateString() %></span>
                                </div>
                            </div>
                            
                            <div class="article-content">
                                <p><%= article.content.substring(0, 200) %>...</p>
                            </div>
                            
                            <div class="article-footer">
                                <% if (article.tags && article.tags.length > 0) { %>
                                    <div class="tags">
                                        <% article.tags.forEach(tag => { %>
                                            <span class="tag">#<%= tag %></span>
                                        <% }) %>
                                    </div>
                                <% } %>
                                <div class="article-actions">
                                    <span class="comments-count"><%= article.comments.length %> comments</span>
                                    <div class="action-buttons">
                                        <a href="/edit/<%= article._id %>" class="btn btn-secondary btn-sm">Edit</a>
                                        <form action="/delete/<%= article._id %>" method="POST" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this article?')">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="empty-state">
                    <h3>You haven't written any articles yet</h3>
                    <p>Start sharing your thoughts with the world!</p>
                    <a href="/create" class="btn btn-primary">Write Your First Article</a>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>